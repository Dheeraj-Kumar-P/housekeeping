<body style="text-align:center">
<h2><%=@hotel.name%></h2><br>
<%= form_tag( { :controller => "hotels", :action => "update", :id => params[:id] }, { :multipart => true })do %> 
	<table class='table' style='width:30%' align="center">
	<tr><td style='text-align:center'><b>Hotel name </td><td style='width:60%;text-align:center'><%= text_field(:hotels,:name, value: @hotel.name) %></td></tr>
	<tr><td style='text-align:center'><b>Address </td><td style='width:60%;text-align:center'><%= text_area(:hotels, :address, value: @hotel.address)%></td></tr>
	<tr><td style='text-align:center'><b>Logo </td><td style='width:60%;text-align:center'><%= file_field(:hotels, :imageable)%></td></tr>
	</table><br>
	<p><%= submit_tag "Update", class: 'btn btn-info'%></p>
<% end %><br>
<%= link_to 'Back', {:controller =>'hotels',:action=>'show',:id =>params[:id]}, class: 'btn btn-info'%>
</body>