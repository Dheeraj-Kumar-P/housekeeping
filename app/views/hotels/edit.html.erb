<body style="text-align:center">
<% if flash[:notice] %>
	<%= flash[:notice]%><br/>
<% end %>
<h2><%=@hotel.name%></h2><br>
<%= form_tag(:controller => "hotels", :action => "update", :id => params[:id])do %> 
	<table class='table table-bordered' style='width:30%' align="center">
	<tr><td style='text-align:center'><b>Hotel name </td><td style='width:60%;text-align:center'><%= text_field(:hotels,:name, value: @hotel.name) %></td></tr>
	<tr><td style='text-align:center'><b>Address </td><td style='width:60%;text-align:center'><%= text_area(:hotels, :address, value: @hotel.address)%></td></tr>
	</table><br>
	<p><%= submit_tag "Update", class: 'btn btn-info'%></p>
<% end %><br>
<%= link_to 'Back', {:controller =>'admin',:action=>'show',:id =>session[:user_id]}, class: 'btn btn-info'%>
</body>