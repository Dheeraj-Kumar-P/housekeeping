<body style="text-align:center">
<% if flash[:notice] %>
	<%= flash[:notice]%><br/>
<% end %>
<h2>&emsp;Create Hotel</h2><br>
<%= form_tag(:controller => "hotels", :action => "create") do %> 
	<table class='table table-bordered' style='width:30%' align="center">
	<tr><td style='text-align:center'><b>Hotel name </td><td style='width:60%;text-align:center'><%= text_field(:hotels,:name) %></td></tr>
	<tr><td style='text-align:center'><b>No of Rooms </td><td style='width:60%;text-align:center'><%= number_field(:hotels, :no_of_rooms)%></td></tr>
	<tr><td style='text-align:center'><b>No of Staff </td><td style='width:60%;text-align:center'><%= number_field(:hotels, :no_of_staff)%></td></tr>
	<tr><td style='text-align:center'><b>No of Maid </td><td style='width:60%;text-align:center'><%= number_field(:hotels, :no_of_maid)%></td></tr>
	</table><br>
	<p><%= submit_tag "Create", class: 'btn btn-info'%></p>
<% end %><br>
<%= link_to 'Back', {:controller =>'admin',:action=>'show',:id =>session[:user_id]}, class: 'btn btn-info'%>
</body>