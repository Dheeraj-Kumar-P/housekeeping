		<%end%>
	</table><br>
	<h5><b>&emsp;Maids</b></h5>
	<table class="table table-bordered" style='width:40%' align='center'>
		<tr><th>Name</th><th>Email</th><th>Phone.No</th>
		</tr>
		<%= @maids.each do |maid|%>
		<tr>
			<td>&emsp;<%=maid.name%></td><td><%=maid.email%></td><td><%=maid.phone_no%></td><td><%= check_box(maid.id,value='true', {checked: maid.is_active == 0})%>&emsp;Disable</td>	
		</tr>
		<%end%> 
	</table><br><br>
