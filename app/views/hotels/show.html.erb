<p style="text-align:right	"><%= link_to "Create User", {:controller =>'users',:action=>'new',:id=>params[:id]}, class: 'btn btn-info'%>&emsp;</p><br>
&emsp;<h5>&emsp;<b>Staffs</b></h5>
<%= form_tag(:controller => "hotels",:action =>"block") do %>
	<table class="table table-bordered" style='width:40%' align='center'>		
		<tr><th>Name</th><th>Email</th><th>Phone.No</th>
		</tr>
		<%= @staffs.each do |staff|%>
		<tr>
			<td>&emsp;<%=staff.name%></td><td><%=staff.email%></td><td><%=staff.phone_no%></td><td><%= check_box(staff.id,value='true', {checked: staff.is_active == 0})%>&emsp;Disable</td>	
